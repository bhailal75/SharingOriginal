<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/book_Raw"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="horizontal"
    android:background="@drawable/rectangle_shape"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/ivChapter"
        android:src="@drawable/ic_music_player"
        android:layout_width="30dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="05dp"
        android:text="Name"
        android:layout_toRightOf="@+id/ivChapter"
        android:layout_toLeftOf="@+id/download_btn"
        android:textColor="@color/white"
        android:textSize="20dp" />

 <!--   <ImageView
        android:id="@+id/play_btn"
        android:layout_width="0dp"
        android:background="@drawable/ic_play_circle_black"
        android:layout_height="50dp"
        android:layout_weight="2" />

    <ImageView
        android:id="@+id/pause_btn"
        android:layout_width="0dp"
        android:background="@drawable/ic_pause_circle_outline_black_24dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_weight="2" />-->

    <Button
        android:layout_centerVertical="true"
        android:id="@+id/download_btn"
        android:layout_width="45dp"
        android:layout_alignParentRight="true"
        android:layout_height="40dp"
        android:contentDescription="Download"
        android:background="@drawable/ic_file_download"/>

</RelativeLayout>
