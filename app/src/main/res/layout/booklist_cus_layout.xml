<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/book_Raw"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/rectangle_shape"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/ivBookFolder"
        android:src="@drawable/ic_book_folder"
        android:layout_width="30dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="05dp"
        android:text="Name"
        android:layout_toLeftOf="@+id/download_book_btn"
        android:layout_toRightOf="@+id/ivBookFolder"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <!--<Button-->
        <!--android:layout_centerVertical="true"-->
        <!--android:id="@+id/right_arrow"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:src="@drawable/ic_file_download"-->
        <!--android:contentDescription="download this book"-->
        <!--android:layout_height="wrap_content" />-->

    <Button
        android:layout_centerVertical="true"
        android:id="@+id/download_book_btn"
        android:layout_width="45dp"
        android:layout_alignParentRight="true"
        android:layout_height="40dp"
        android:contentDescription="Download this book"
        android:background="@drawable/ic_file_download"/>

</RelativeLayout>
