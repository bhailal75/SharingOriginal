<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context="com.lsfv.literaturesharing.ProfileActivity">
    <EditText
        android:id="@+id/c_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:background="@color/drawerColor"
        android:textColor="@color/white"
        android:textColorHint="@color/white_hint"
        android:ems="10"
        android:maxLength="4"
        android:hint="@string/enter_current_pin"
        android:inputType="numberPassword"
        android:paddingLeft="05dp"
/>

    <EditText

        android:id="@+id/n_pass"
        android:layout_below="@+id/c_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:background="@color/drawerColor"
        android:textColor="@color/white"
        android:textColorHint="@color/white_hint"
        android:ems="10"
        android:maxLength="4"
        android:hint="@string/enter_new_pin"
        android:inputType="numberPassword"
        android:paddingLeft="05dp"
       />

    <Button
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n_pass"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@color/drawerColor"
        android:text="submit"
        android:textColor="@color/white" />
</LinearLayout>
